@using Service.Models;
@model IEnumerable<Timesheet>

<div class="container mt-4">
    <div class="d-flex justify-content-end mb-3">
        <a href="/Timesheet/DownloadCsv" class="btn btn-primary me-2">Download CSV</a>
        <a href="/Timesheet/Add" class="btn btn-primary">Add Timesheet</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>UserName</th>
                <th>Date</th>
                <th>Project</th>
                <th>Description</th>
                <th>Hours Worked</th>
                <th>Total Hours</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var timesheet in Model)
            {
                <tr>
                    <td>@timesheet.ID</td>
                    <td>@timesheet.UserName</td>
                    <td>@timesheet.Date.ToString("dd/MM/yyyy")</td>
                    <td>@timesheet.Project</td>
                    <td>@timesheet.Description</td>
                    <td>@timesheet.HoursWorked</td>
                    <td>@timesheet.TotalHours</td>
                </tr>
            }
        </tbody>
    </table>
</div>
